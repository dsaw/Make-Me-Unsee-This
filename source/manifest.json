{
    "manifest_version":2,
    "name":"Make Me Unsee This",
    "short_name":"Unsee This",
    "description":"Blacks out some of the hate speech and offensive language.",
    "author":"Dmitry Dereshev",
    "options_ui":{
        "page":"options.html",
        "chrome_style":true
    },
    "version":"0.1",
    "permissions":[
        "storage",
        "activeTab"
    ],
    "browser_action":{
        
        "default_title":"Configure",
        "default_popup":"options.html"
    },
    "content_scripts":[
        {
            "matches":[
                "http://*/*",
                "https://*/*"
            ],
            "js":[
                "defaults.js",
                "shared.js",
                "timers.js",
                "text_changer.js",
                "image_changer.js",
                "top.js"
            ],
            "run_at":"document_end"
        }
    ],
    "web_accessible_resources":[
        "empty_image.png",
        "icons/eye128.png"
    ]
}
